#  Commit everything
function commit() {
  commitMessage="$1"

  if [ "$commitMessage" = "" ]; then
     commitMessage="wip"
  fi

  git add .
  eval "git commit -a -m '${commitMessage}'"
}

function editor-commit() {
  git add .
  git commit -a
}

# Bash into docker container
function docker-bash() {
  # Accepts container name
  docker exec -it $1 bash
}

# Open tinkerwell with CWD / specified directory
function tinkerwell {
  if [ $# -eq 0 ] || [ $1 = "." ]; then
    TW_PATH=$(pwd)
  else
    TW_PATH=$1
  fi

  TW_PATH=$(echo -n $TW_PATH | base64)

  open "tinkerwell://?cwd=$TW_PATH"
}

# Drop and create Mysql database
function db-fresh {
  mysql -u root -p -e "DROP DATABASE $1; CREATE DATABASE $1;"
}
