{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "session_child_cycle": "<leader>+h",
    "session_child_cycle_reverse": "<leader>+l"
  },
  "permission": {
    "bash": {
      "find *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "grep *": "allow",
      "which *": "allow",
      "echo *": "allow"
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": true
    },
    "patrium-gitlab": {
        "type": "remote",
        "url": "https://gitlab.patrium.health/api/v4/mcp",
        "enabled": false
    }
  }
}
